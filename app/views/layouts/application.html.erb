<!DOCTYPE html>
<html>
  <head>
    <title>Twenty One Day Habit</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="body">
      <h1 id="title">Twenty One Day Habit</h1>
        <span id="tagline">Get shit done.</span>
        <hr id="break" />
        <%- if flash[:error] %>
          <div id="error">
            <span id="error"><%= flash[:error] %></span>
          </div>
        <%- end %>
        <%- if flash[:notice] %>
          <div id="notice">
            <span><%= flash[:notice] %></span>
          </div>
        <%- end %>
        <%= yield %>
        <hr id="break" />
        <span id="credits">Made by <a href="http://jeffdickey.info/">Jeff Dickey</a></span>
      </div>
  </body>
</html>
